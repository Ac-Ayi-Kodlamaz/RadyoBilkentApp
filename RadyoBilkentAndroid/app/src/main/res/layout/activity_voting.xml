<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VotingActivity">

    <Button
        android:id="@+id/song2"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="194dp"
        android:layout_toEndOf="@+id/song1"
        android:text="Button2" />

    <Button
        android:id="@+id/song1"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="194dp"
        android:text="Button1" />

    <Button
        android:id="@+id/song4"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_below="@+id/song2"
        android:layout_marginStart="17dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/song3"
        android:text="Button4" />

    <Button
        android:id="@+id/song3"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_below="@+id/song1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="7dp"
        android:text="Button3" />

    <EditText
        android:id="@+id/points_field"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="8dp"
        android:hint="Enter points" />

    <TextView
        android:id="@+id/textOfVoting"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="139dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="606dp"
        android:text="Voting Session #1\n" />

</RelativeLayout>