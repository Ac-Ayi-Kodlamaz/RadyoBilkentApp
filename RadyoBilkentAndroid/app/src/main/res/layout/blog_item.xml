<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="insideOverlay"
    android:background="@color/button_skin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/blog_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/radyo_bilkent_logo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/blog_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/no_interact"
            android:paddingHorizontal="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/blog_title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/bilkent_gray"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/blog_title_bar" />

            <TextView
                android:id="@+id/blog_duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="duration"
                android:textColor="@color/bilkent_gray"
                app:layout_constraintBottom_toBottomOf="@id/blog_title_bar"
                app:layout_constraintEnd_toEndOf="@id/blog_title_bar"
                app:layout_constraintTop_toBottomOf="@id/blog_title_text" />

            <TextView
                android:id="@+id/blog_creator_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="duration"
                android:textColor="@color/bilkent_gray"
                app:layout_constraintBottom_toBottomOf="@id/blog_title_bar"
                app:layout_constraintStart_toStartOf="@id/blog_title_bar"
                app:layout_constraintTop_toBottomOf="@id/blog_title_text" />

            <TextView
                android:id="@+id/blog_times_consumed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="xxx readers"
                android:textColor="@color/bilkent_gray"
                app:layout_constraintBottom_toBottomOf="@id/blog_title_bar"
                app:layout_constraintStart_toStartOf="@id/blog_title_bar"
                app:layout_constraintTop_toBottomOf="@id/blog_duration_text" />

            <TextView
                android:id="@+id/blog_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:text="00/00/00"
                android:textColor="@color/bilkent_gray"
                app:layout_constraintBottom_toBottomOf="@id/blog_title_bar"
                app:layout_constraintEnd_toEndOf="@id/blog_title_bar"
                app:layout_constraintTop_toBottomOf="@id/blog_creator_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/blog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cormorant_garamond_medium"
            android:paddingHorizontal="30dp"
            android:paddingTop="6dp"
            android:text="content\ncontent content"
            android:textColor="@color/dark_radio_bilkent_purple"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>
