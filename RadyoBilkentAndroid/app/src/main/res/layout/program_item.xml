<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/program_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/program_name_text"
        tools:srcCompat="@color/purple_500" />

    <TextView
        android:id="@+id/program_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Program Name"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/program_time_text"
        app:layout_constraintEnd_toStartOf="@+id/program_image"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/program_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX:XX - XX:XX"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        app:layout_constraintEnd_toStartOf="@+id/program_image"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>