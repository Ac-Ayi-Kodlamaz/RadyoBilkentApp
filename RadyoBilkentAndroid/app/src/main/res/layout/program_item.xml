<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.RadyoBilkentAndroid">

    <ImageView
        android:id="@+id/program_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@color/purple_200" />

    <ImageView
        android:id="@+id/text_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="#bbbbbbbb"
        app:layout_constraintBottom_toBottomOf="@id/program_explanation_text"
        app:layout_constraintEnd_toEndOf="@id/program_explanation_text"
        app:layout_constraintStart_toStartOf="@id/program_explanation_text"
        app:layout_constraintTop_toTopOf="@id/program_name_text" />

    <TextView
        android:id="@+id/program_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"
        android:text="Program Name"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toTopOf="@+id/program_time_text"
        app:layout_constraintStart_toStartOf="@id/text_background" />

    <TextView
        android:id="@+id/program_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:paddingStart="10dp"
        android:text="XX:XX - XX:XX"
        app:layout_constraintBottom_toTopOf="@+id/program_explanation_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/program_explanation_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:maxLines="10"
        android:text="program explanation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>