<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RadyoBilkentAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_skin</item>
        <item name="colorPrimaryVariant">@color/yes_interact</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_red</item>
        <item name="colorSecondaryVariant">@color/no_interact</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/dark_radio_bilkent_purple</item>
        <item name="backgroundColor">@color/dark_radio_bilkent_purple</item>
    </style>
</resources>